{% extends "base.html.twig" %}

{% block title %}
	Evenements
{% endblock %}

{% block body %}

	<div class="event-container">
		{% for event in events %}
			<article class="event-card" aria-labelledby="event-title-1">
				<aside
					class="event-card__left" aria-hidden="true">
					<!-- Replace by: {{ event.date|date('M') }}, {{ event.date|date('d') }}, etc. -->
					<div class="event-card__month" id="event-month">{{ event.date|date('M') }}</div>
					<div class="event-card__day" id="event-day">{{ event.date|date('d') }}</div>
					<div class="event-card__time" id="event-time">{{ event.date|date('H:i') }}</div>
				</aside>

				<div class="event-card__body">
					<header>
						<h3 class="event-title" id="event-title-1">{{event.title}}</h3>
						<div class="event-meta">
							<div class="meta-item">
								<span id="event-created">Le
									{{event.date|date()}}</span>
							</div>
							<div class="meta-item pill" id="event-places">{{event.nbrOfPlaces}}
								places</div>
						</div>
					</header>

					<p class="event-desc" id="event-desc">{{event.description}}</p>
					<div class="event-footer">
						<div class="places">
							<span aria-hidden="true">📍</span>
							<span id="event-location-2">{{event.location}}</span>
						</div>

						<div style="display:flex; gap:8px; align-items:center;">
							<button class="btn btn-sm btn-primary" type="button">S'inscrire</button>
							<a class="btn btn-sm btn-info" href="{{path('app_event_show', {id: event.id})}}">Détails</a>
						</div>
					</div>
				</div>
			</article>

		{% endfor %}
	</div>

{% endblock %}
