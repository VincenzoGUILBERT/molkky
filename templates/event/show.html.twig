{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            {# En-tête avec icône et titre #}
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-3 p-3 me-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                            </svg>
                        </div>
                        <div>
                            <h2 class="mb-1">{{ event.title }}</h2>
                            <p class="mb-0 opacity-75">Détails de l'événement</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    {# Informations de l'événement #}
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="border-bottom pb-3">
                                <h6 class="text-muted mb-2">Description</h6>
                                <p class="mb-0">{{ event.description }}</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="border-bottom pb-3">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-calendar me-2"></i>Date et heure
                                </h6>
                                <p class="mb-0">{{ event.date ? event.date|date('d/m/Y à H:i') : '' }}</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="border-bottom pb-3">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-2"></i>Lieu
                                </h6>
                                <p class="mb-0">{{ event.location }}</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="border-bottom pb-3">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-users me-2"></i>Places disponibles
                                </h6>
                                <p class="mb-0">
                                    <span class="badge bg-dark bg-gradient fs-6">{{ event.nbrOfPlaces }} places</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    {# Boutons d'action en bas #}
                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                            </svg>
                            Retour
                        </a>
                        
                        <div class="d-flex gap-2">
                            <a class="btn btn-primary" href="{{ path('app_event_edit', {'id': event.id}) }}" title="Modifier">
                                Modifier
                            </a>
                            
                            {{ include('event/_delete_form.html.twig', {'attr': {'class': 'btn btn-danger btn-sm', 'title': 'Supprimer'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
{% endblock %}