{% extends 'base.html.twig' %}

{% block title %}Événement{% endblock %}

{% block body %}
    <div class="container mt-4 p-4">
        <h1 class="mb-4">Détails de l'événement</h1>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ event.title }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr >
                    <th scope="row">Date</th>
                    <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Lieu</th>
                    <td>{{ event.location }}</td>
                </tr>
                <tr>
                    <th scope="row">Places restantes</th>
                    <td>{{ event.nbrOfPlaces }}</td>
                </tr>
            </tbody>
        </table>
    
        <div class="d-flex mt-3 justify-content-between">
            <!-- Bouton retour à gauche-->
            <a class="link-secondary " href="{{ path('app_event_index') }}">Retour à la liste</a>

            <!-- Boutons Modifier et Supprimer à droite-->
            <div class="d-flex gap-2">
                <a class="btn btn-primary" href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>

                {{ include('event/_delete_form.html.twig', {'attr': {'class': 'btn btn-outline danger'}}) }}
            </div>
        </div>

    </div>
{% endblock %}
