{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

{# Hero Section #}
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">Contactez-nous</h1>
        <p class="lead mb-0">Une question ? Une suggestion ? Nous sommes à votre écoute !</p>
    </div>
</section>

{# Section principale #}
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            
            {# Colonne formulaire #}
            <div class="col-lg-7">
                {# Messages flash #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="mb-4">
                            <i class="fas fa-envelope text-primary me-2"></i>Envoyez-nous un message
                        </h3>
                        
                        <form method="POST" action="{{ path('app_contact') }}">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="nom" class="form-label fw-semibold">
                                        Nom <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" 
                                           class="form-control form-control-lg" 
                                           id="nom" 
                                           name="nom" 
                                           placeholder="Votre nom"
                                           required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="prenom" class="form-label fw-semibold">
                                        Prénom
                                    </label>
                                    <input type="text" 
                                           class="form-control form-control-lg" 
                                           id="prenom" 
                                           name="prenom" 
                                           placeholder="Votre prénom">
                                </div>
                                
                                <div class="col-12">
                                    <label for="email" class="form-label fw-semibold">
                                        Email <span class="text-danger">*</span>
                                    </label>
                                    <input type="email" 
                                           class="form-control form-control-lg" 
                                           id="email" 
                                           name="email" 
                                           placeholder="votre.email@exemple.com"
                                           required>
                                </div>
                                
                                <div class="col-12">
                                    <label for="message" class="form-label fw-semibold">
                                        Message <span class="text-danger">*</span>
                                    </label>
                                    <textarea class="form-control" 
                                              id="message" 
                                              name="message" 
                                              rows="6" 
                                              placeholder="Votre message..."
                                              required></textarea>
                                </div>
                                
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow">
                                        <i class="fas fa-paper-plane me-2"></i>Envoyer le message
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            {# Colonne informations #}
            <div class="col-lg-5">
                <div class="sticky-top" style="top: 2rem;">
                    <h3 class="mb-4">
                        <i class="fas fa-info-circle text-primary me-2"></i>Informations de contact
                    </h3>
                    
                    {# Carte Adresse #}
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div>
                                    <h5 class="mb-2">Adresse</h5>
                                    <p class="text-muted mb-0">3 rue Turbil<br>69003 Lyon</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {# Carte Email #}
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="icon-box bg-success bg-opacity-10 text-success me-3">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div>
                                    <h5 class="mb-2">Email</h5>
                                    <a href="mailto:contact.crhom@gmail.com" class="text-muted text-decoration-none">
                                        contact.crhom@gmail.com
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {# Carte Horaires #}
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="icon-box bg-warning bg-opacity-10 text-warning me-3">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div>
                                    <h5 class="mb-2">Horaires</h5>
                                    <p class="text-muted mb-1">
                                        <strong>Samedi :</strong> 14h - 18h
                                    </p>
                                    <p class="text-muted mb-0">
                                        <strong>Dimanche :</strong> 10h - 16h
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {# Réseaux sociaux #}
                    <div class="card border-0 shadow-sm bg-light">
                        <div class="card-body p-4 text-center">
                            <h5 class="mb-3">Suivez-nous</h5>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="https://www.facebook.com/CRHOM69/" 
                                   target="_blank" 
                                   class="btn btn-primary btn-lg rounded-circle"
                                   title="Facebook">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" 
                                   class="btn btn-danger btn-lg rounded-circle"
                                   title="Instagram">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="mailto:contact.crhom@gmail.com" 
                                   class="btn btn-success btn-lg rounded-circle"
                                   title="Email">
                                    <i class="fas fa-envelope"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</section>

{# Section Carte #}
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h3 class="fw-bold">
                <i class="fas fa-location-dot text-primary me-2"></i>Comment nous trouver
            </h3>
        </div>
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="ratio ratio-21x9">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2783.6830157934187!2d4.866097575613671!3d45.75750041382227!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f4ea792a762339%3A0xeabb00a6c9e71893!2s3%20Rue%20Turbil%2C%2069003%20Lyon!5e0!3m2!1sfr!2sfr!4v1758635912906!5m2!1sfr!2sfr" 
                            style="border:0; border-radius: 8px;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
/* Hero section contact */
.contact-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* Inputs personnalisés */
.form-control {
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: var(--bs-primary);
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
}

.form-control-lg {
    padding: 0.75rem 1rem;
}

/* Icon boxes */
.icon-box {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: 1.25rem;
}

/* Boutons sociaux */
.btn.rounded-circle {
    width: 50px;
    height: 50px;
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.btn.rounded-circle:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}

/* Alert personnalisée */
.alert-success {
    border: none;
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
}

/* Sticky sidebar */
@media (min-width: 992px) {
    .sticky-top {
        position: sticky;
    }
}

/* Animation du bouton submit */
.btn-primary {
    transition: all 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(13, 110, 253, 0.3);
}
</style>

{% endblock %}